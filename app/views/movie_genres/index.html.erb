<div class="top-frame">
    <h3>Gênero</h3>
    <%= link_to "+ Novo", new_movie_genre_path, :class=>"btn btn-danger primary" %>
</div>


<table class="table">
  <thead>
    <tr>
      <th class="col-md-4" scope="col">Nome</th>
      <th class="col-md-8" scope="col">Criado em</th>
      <th class="col-md-0" scope="col">Ações</th></th>
    </tr>
  </thead>
  <tbody>
    <% @movie_genres.each do |movie_genre| %>
      <%= render movie_genre %>
    <% end %>
  </tbody>
</table>