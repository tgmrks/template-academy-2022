<div id="<%= dom_id director %>">

  <tr>
    <td><%= director.name %></td>
    <td><%= date_formatting(director.created_at, 'director') %></td>
    <td>
      <div class="icon-btn">
        <%= link_to edit_director_path(director), class: 'icon' do %>
          <%= image_tag 'icons/editIcon.png', class: 'mt-2 mb-2' %>
        <% end %>
        <%= button_to director, method: :delete, class: 'delete-btn' do %>
          <%= image_tag 'icons/deleteIcon.png', class: 'mt-2 mb-2' %>
        <% end %>
      </div>
    </td>
  </tr>
</div>